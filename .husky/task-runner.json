         "include": [
            "**/*.cs",
            "**/*.vb"
         ]
      },
      {
         "name": "welcome",
         "group": "pre-commit",
         "command": "bash",
         "args": [
            "-c",
            "echo Great work! ðŸ¥‚"
         ],
